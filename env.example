# Environment Configuration for Amnesty CMS - Mongol Bichig Version
# Copy this file to .env.local and update with your actual values

# Strapi CMS API Configuration
NEXT_PUBLIC_API_URL=http://localhost:1337/api
NEXT_PUBLIC_API_KEY=your_strapi_api_token_here

# Alternative environment variable name (for compatibility)
STRAPI_API_KEY=your_strapi_api_token_here

# CMS Locale Configuration
NEXT_PUBLIC_CMS_LOCALE=mn

# Demo Mode (set to false to use real CMS data)
NEXT_PUBLIC_DEMO_MODE=false

# Base URL for media files
NEXT_PUBLIC_MEDIA_URL=http://localhost:1337 